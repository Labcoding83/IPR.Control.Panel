<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IPR.Control.Panel.Controls.FixedOffsetSettingsControl">
	<Panel>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<Panel>
				<TextBlock Text="Fixed value : " />
				<TextBlock Name="tbValue" HorizontalAlignment="Right"/>
			</Panel>
			<Slider Width="180" Height="40" Margin="0,12,0,0" 
					Name="fixedOffsetSelector"
					IsSnapToTickEnabled="True" 
					Classes="Modern Ticks" 
					TickFrequency="1"/>
			<Button Margin="0 12 0 0" Click="ApplyValue_Clicked">Apply</Button>
		</StackPanel>
	</Panel>
</UserControl>
