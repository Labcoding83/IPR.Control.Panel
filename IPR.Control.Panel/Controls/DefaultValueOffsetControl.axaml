<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IPR.Control.Panel.Controls.DefaultValueOffsetControl">
	<StackPanel>
		<Panel>
			<TextBlock Text="Default value : " />
			<TextBlock Name="tbDefaultValue" HorizontalAlignment="Right"/>
		</Panel>
		<Button Margin="0 12 0 0" Click="TbDefaultValue_Tapped">Apply</Button>
	</StackPanel>
</UserControl>
